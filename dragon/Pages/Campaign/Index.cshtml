@page
@model dragon.Pages.Campaign.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<div class="row">
    @foreach (var item in Model.Ad)
    {
        <div class="col-12 mb-4">
            <div class="card">

                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    @if (item.AdImage != null)
                    {
                        <div class="dish-image-container mb-1">
                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.AdImage)" class="card-img-top" alt="@item.Title">
                        </div>
                    }

                </div>
                <div class="card-footer">
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-secondary">Details</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    }
</div>

